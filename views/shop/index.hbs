<div class="row">
   {{# each products }}
   {{# each this }}
   <div class="col-xs-6 col-sm-6 col-md-4">
      <div class="thumbnail">
         <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
         <div class="caption" >
            <h4>{{ this.title }}</h4>
            <h4 class="text-danger">
            {{ this.description }}
            <h4>
            <h5 class="remaining" hidden>
            Stock : {{ this.stock }} Units
            <h5>
            {{#if this.stock}}
            <div class="clearfix">
               <form action="/add-to-cart/{{this._id}} method="get">
                  <div class="price pull-left">Rs.{{ this.price }}</div>
                  <div class="col-sm-6 col-md-6 col-xs-6">
                     <div class="input-group pull-right">
                        <span class="input-group-addon">Qty</span>
                        <input type="number" class="form-control" id="qty" name ="qty" aria-describedby="basic-addon3" value='1' min="1" max="5" >
                     </div>
                  </div>
                  <button type="submit" class="btn btn-success">Add to Cart</button>
               </form>
            </div>
            {{ else }}
            <div class="clearfix">
               <form action="/add-to-cart/{{this._id}} method="get">
                  <div class="price pull-left">Rs.{{ this.price }}</div>
                  <div class="col-sm-6 col-md-6 col-xs-6">
                     <div class="input-group pull-right">
                        <span class="input-group-addon" id="basic-addon3">Qty</span>
                        <input type="number" class="form-control" id="qty" name ="qty" aria-describedby="basic-addon3" value='1' min="1" max="5" >
                     </div>
                  </div>
                  <button type="button" class="btn btn-danger">Sold Out</button>
               </form>
            </div>
            {{/if}}                                
         </div>
      </div>
   </div>
   {{/each}}
   {{/each}}
