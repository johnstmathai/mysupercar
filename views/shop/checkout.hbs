<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4 hidden>Your Total: Rs.{{total}}</h4>
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Landmark</label>
                        <input type="text" id="landmark" class="form-control" required name="landmark">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Pincode</label>
                        <input type="text" maxlength="6"  pattern="[0-9]{6}" id="pincode" class="form-control" required name="pincode" title="Enter six digit pincode Eg. 683562">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-cvc">Mobile No</label>
                        <input type="text" maxlength="10"  pattern="[0-9]{10}" id="mobileno" class="form-control" required name="mobileno"  title="Enter 10 digit mobile no Eg. 7418596753">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Complete Booking</button>
        </form>
    </div>
</div>
